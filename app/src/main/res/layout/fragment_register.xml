<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFragment">

    <include
        layout="@layout/bar_layout"
        android:id="@+id/toolbar"
        />

    <TextView
        android:id="@+id/textView_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="crate a new account"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:padding="12dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_account"
        android:layout_margin="12dp"
        android:background="@drawable/bg_register_edit_text"
        android:hint="Username"
        android:padding="12dp"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/edt_register_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_username"
        android:layout_margin="12dp"
        android:background="@drawable/bg_register_edit_text"
        android:hint="Email"
        android:padding="12dp"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/edt_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_email"
        android:layout_margin="12dp"
        android:background="@drawable/bg_register_edit_text"
        android:hint="Password"
        android:padding="12dp"
        android:textSize="24sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_register_password"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:gravity="center"
        android:text="r e g i s t e r"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/bg_chat_item_sender"
        />



</androidx.constraintlayout.widget.ConstraintLayout>